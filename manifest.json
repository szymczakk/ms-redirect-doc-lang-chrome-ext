{
  "manifest_version": 2,

  "name": "Microsoft doc language redirecter",
  "description": "This extension change Microsoft language in documentation for defined one",
  "version": "1.0",
  "browser_action": {
   "default_popup": "popup.html"
  },
  "permissions": [
   "tabs",
   "storage"
   ],
   "background":{
     "scripts":[
       "background.js"
     ]
   },
   "content_scripts": [
    {
      "matches": ["https://*.microsoft.com/*"],
      "js": ["ms-doc-script.js"]
    }
  ]
}